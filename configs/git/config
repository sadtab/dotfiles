[core]
    editor = nvim
    autocrlf = input
    excludesFile = ~/dotfiles/configs/git/exclude

[alias]
    cl = clean --exclude=Session.vim --exclude=*.swp
    co = checkout
    br = branch
    ft = fetch
    st = status
    lg = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'

[include]
    path = ~/.config/git/gitconf_machine

[pull]
    rebase = false

[push]
	default = current

