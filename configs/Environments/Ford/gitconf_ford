[user]
	name = Sadegh Tabei
	email = stabei@ford.com

#Default difftool
[diff]
	 tool = default-difftool

[difftool "default-difftool"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

#Overwrite the system conf file
[core]
    editor = nvim

[merge]
	tool = nvimdiff

[mergetool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$MERGED\" \"$BASE\" \"$REMOTE\" -c \"wincmd w\" -c \"wincmd J\"

#Meld difftool
[difftool "meld"]
	 cmd = meld "$LOCAL" "$REMOTE"

#Meld mergetool
[mergetool "meld"]
    # Choose one of these 2 lines (not both!)
    #cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[alias]
	diffmeld  = difftool  --tool=meld
	mergemeld = mergetool --tool=meld

[url "https://source.codeaurora.org/quic/le/manifest"]
    insteadOf = git://codeaurora.org/quic/le/manifest.git
[url "https://source.codeaurora.org/quic/le"]
    insteadOf = git://codeaurora.org/quic/le
[url "https://source.codeaurora.org/quic/ype"]
    insteadOf = git://codeaurora.org/quic/ype
[url "http://"]
    insteadOf = git://

[color]
	ui = auto

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
	
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

# Just to check if this config file is sourced : "git ford" is "git fetch"
[alias]
    ford = fetch
